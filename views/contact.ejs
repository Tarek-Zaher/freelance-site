  <body>
    <div class="container-fluid bg-contact-header px-0">
    <header class="container-fluid">
      <div class="container">

      <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light py-4">
          <div class="d-flex flex-grow-1">
            <!-- Navbar Brand -->
            <a class="navbar-brand" href="/">
            <img src="../images/logo.png" width="89px" height="42px" alt="logo">
            </a>
            <div class="w-100 text-right">
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#myNavbar">
                <i class="fas fa-bars text-white"></i>
              </button>
            </div>
          </div>
          <div class="collapse navbar-collapse flex-grow-1 text-right" id="myNavbar">
            <ul class="navbar-nav ml-auto flex-nowrap">
              <!-- Navbar Items -->
              <li class="nav-item pr-lg-5">
                  <a href="/" class="nav-link text-uppercase">home</a>
              </li>
              <li class="nav-item pr-lg-5">
                  <a href="/about" class="nav-link text-uppercase">about</a>
              </li>
              <!-- <li class="nav-item pr-lg-5">
